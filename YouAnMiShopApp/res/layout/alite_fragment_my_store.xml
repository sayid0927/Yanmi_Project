<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/al_top_bg_2">

            <com.zxly.o2o.view.CircleImageView
                android:id="@+id/img_user_head"
                android:layout_width="57.5dp"
                android:layout_height="57.5dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/default_head_big"
                app:border_color="@color/white"
                app:border_width="1dp" />

            <ImageView
                android:id="@+id/img_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_user_head"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/icon_turn_right" />

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txt_shop_name"
                android:layout_alignRight="@+id/txt_shop_name"
                android:layout_centerVertical="true"
                android:text="用户名"
                android:textColor="@color/white"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/txt_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_user_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/img_user_head"
                android:layout_toRightOf="@+id/img_user_head"
                android:text="店铺名字"
                android:textColor="@color/white"
                android:textSize="12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_my_shop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_right_my_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/icon_turn_right" />

            <TextView
                android:id="@+id/txt_my_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="我的网店"
                android:textColor="@color/gray_333333"
                android:textSize="14sp"
               android:layout_centerVertical="true"
                android:layout_marginStart="13dp" />


            <TextView
                android:id="@+id/txt_commodity_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="19款商品"
                android:textColor="#999999"
                android:textSize="14sp"
               android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt_my_shop"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_dcdcdc" />
        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_dcdcdc" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务"
            android:textSize="15dp"
            android:textColor="#999999"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_recharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="7dp"
                android:drawableTop="@drawable/al_icon_recharge"
                android:gravity="center"
                android:padding="10dp"
                android:text="流量冲值"
                android:textColor="@color/gray_333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_youbao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="7dp"
                android:drawableTop="@drawable/al_icon_screensaver"
                android:gravity="center"
                android:padding="10dp"
                android:text="碎柚宝"
                android:textColor="@color/gray_333333"
                android:textSize="13sp" />


            <RelativeLayout
                android:id="@+id/layout_my_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_my_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/al_icon_order"
                    android:gravity="center"
                    android:text="我的订单"
                    android:textColor="@color/gray_333333"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/txt_order_num"
                    style="@style/text_10_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_my_order"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="-6dp"
                    android:layout_toRightOf="@+id/tv_my_order"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:paddingLeft="4.5dp"
                    android:paddingRight="4.5dp"
                    android:text="112"
                    android:visibility="visible" />


            </RelativeLayout>


            <TextView
                android:id="@+id/tv_employee_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="7dp"
                android:drawableTop="@drawable/al_icon_list"
                android:gravity="center"
                android:padding="10dp"
                android:text="店员榜单"
                android:textColor="@color/gray_333333"
                android:textSize="13sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_user_collect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="7dp"
                android:drawableTop="@drawable/al_icon_administration"
                android:gravity="center"
                android:padding="10dp"
                android:text="装机管理"
                android:textColor="@color/gray_333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/btn_user_topic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="7dp"
                android:drawableTop="@drawable/al_icon_commission"
                android:gravity="center"
                android:padding="10dp"
                android:text="优惠券"
                android:textColor="@color/gray_333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/btn_ddyh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="7dp"
                android:drawableTop="@drawable/al_icon_customer"
                android:gravity="center"
                android:padding="10dp"
                android:text="客多多"
                android:textColor="@color/gray_333333"
                android:textSize="13sp" />


            <RelativeLayout
                android:id="@+id/btn_user_guarantees"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_user_guarantee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="8dp"
                    android:drawableTop="@drawable/bg_behave"
                    android:gravity="center"
                    android:text="定制APP"
                    android:textColor="@color/gray_333333"
                    android:textSize="13sp" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@color/white"
            android:orientation="vertical">


        </LinearLayout>



    </LinearLayout>



</LinearLayout>