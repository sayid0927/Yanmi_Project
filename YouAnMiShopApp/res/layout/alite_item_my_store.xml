<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_my_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_my_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/al_icon_order"
            android:gravity="center"
            android:text="我的订单"
            android:layout_marginTop="15dp"
            android:textColor="@color/gray_333333"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/txt_order_num"
            style="@style/text_10_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_my_order"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="-6dp"
            android:layout_toRightOf="@+id/tv_my_order"
            android:background="@drawable/circle"
            android:gravity="center"
            android:paddingLeft="4.5dp"
            android:paddingRight="4.5dp"
            android:text="112"
            android:visibility="visible" />


    </RelativeLayout>





</LinearLayout>
