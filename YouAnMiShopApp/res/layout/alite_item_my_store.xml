<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/ripple_one_item_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_my_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/suipinbao" />

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/tv_my_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:gravity="center"
            android:text="我的订单"
            android:textColor="@color/gray_333333"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/txt_order_num"
            style="@style/text_10_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_my_order"
            android:layout_marginTop="-26dp"
            android:layout_toRightOf="@+id/tv_my_order"
            android:background="@drawable/circle"
            android:gravity="center"
            android:paddingLeft="4.5dp"
            android:paddingRight="4.5dp"
            android:text=""
            android:visibility="gone" />


    </RelativeLayout>


</LinearLayout>
