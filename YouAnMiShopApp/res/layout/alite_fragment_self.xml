<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red_lable"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/red_lable">

                <com.zxly.o2o.view.CircleImageView
                    android:id="@+id/img_user_head"
                    android:layout_width="57.5dp"
                    android:layout_height="57.5dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/default_head_big"
                    app:border_color="@color/white"
                    app:border_width="1dp" />

                <ImageView
                    android:id="@+id/img_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_user_head"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/icon_turn_right" />

                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/txt_shop_name"
                    android:layout_alignRight="@+id/txt_shop_name"
                    android:layout_centerVertical="true"
                    android:text="用户名"
                    android:textColor="@color/gray_333333"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/txt_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_user_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/img_user_head"
                    android:layout_toRightOf="@+id/img_user_head"
                    android:text="店铺名字"
                    android:textColor="@color/gray_888888"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_dcdcdc" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.03"
                    android:gravity="center">

                    <TextView

                        android:id="@+id/tv_month_earnings_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="999"
                        android:textColor="@android:color/white"
                        android:textSize="40dp" />

                    <TextView
                        android:id="@+id/tv_month_earnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:text="本月收益"
                        android:textColor="@android:color/white"
                        android:textSize="10dp" />

                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.03"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_accumulative_earnings_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="999"
                        android:textColor="@android:color/white"
                        android:textSize="40dp" />

                    <TextView
                        android:id="@+id/tv_accumulative_earnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:text="累计收益"
                        android:textColor="@android:color/white"
                        android:textSize="10dp" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/layout_my_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_my_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/bg_behave"
                    android:gravity="center"
                    android:text="消息中心"
                    android:textColor="@color/gray_333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_my_message_num"
                    style="@style/text_10_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_my_message"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="-6dp"
                    android:layout_toRightOf="@+id/tv_my_message"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:paddingLeft="4.5dp"
                    android:paddingRight="4.5dp"
                    android:text="112"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_my_earnings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_my_earnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/bg_behave"
                    android:gravity="center"
                    android:text="收益明细"
                    android:textColor="@color/gray_333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_earnings_num"
                    style="@style/text_10_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_my_earnings"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="-6dp"
                    android:layout_toRightOf="@+id/tv_my_earnings"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:paddingLeft="4.5dp"
                    android:paddingRight="4.5dp"
                    android:text="112"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_bank_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_bank_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/bg_behave"
                    android:gravity="center"
                    android:text="银行卡"
                    android:textColor="@color/gray_333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_bank_card_num"
                    style="@style/text_10_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_bank_card"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="-6dp"
                    android:layout_toRightOf="@+id/tv_bank_card"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:paddingLeft="4.5dp"
                    android:paddingRight="4.5dp"
                    android:text="112"
                    android:visibility="visible" />

            </RelativeLayout>



        </LinearLayout>


        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_dcdcdc" />



        <RelativeLayout
            android:id="@+id/btn_user_balance"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_turn_right" />

            <TextView
                android:id="@+id/txt_user_balance_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:text="账户余额："
                android:textColor="@color/gray_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_user_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt_user_balance_content"
                android:textColor="@color/gray_333333"
                android:textSize="14sp" />



        </RelativeLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_dcdcdc" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_turn_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:drawablePadding="8dp"
                android:text="柚安米商学院"
                android:textColor="@color/gray_333333"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_dcdcdc" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_turn_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:drawablePadding="8dp"
                android:text="柚安米商学院"
                android:textColor="@color/gray_333333"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_dcdcdc" />

        </RelativeLayout>



        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_dcdcdc" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_turn_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:drawablePadding="8dp"
                android:text="柚安米商学院"
                android:textColor="@color/gray_333333"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_dcdcdc" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_turn_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:drawablePadding="8dp"
                android:text="柚安米商学院"
                android:textColor="@color/gray_333333"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_dcdcdc" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_yam_college"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_turn_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:drawablePadding="8dp"
                android:text="柚安米商学院"
                android:textColor="@color/gray_333333"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_dcdcdc" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />

    </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>