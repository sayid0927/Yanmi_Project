<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/alite_connection_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_dcdcdc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="设置门店信息"
            android:textColor="#333333"
            android:textSize="18dp" />


        <com.zxly.o2o.view.CircleImageView
            android:id="@+id/img_user_head"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/default_head_big"
            app:border_color="@color/white"
            app:border_width="1dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout_shop_home"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/al_icon_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/al_icon_home" />


            <EditText
                android:id="@+id/edit_shop_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/btn_clean_password"
                android:layout_toRightOf="@id/al_icon_home"
                android:background="#00000000"
                android:hint="门店名称"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/gray_999999"
                android:textSize="15sp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/gray_dcdcdc" />


        <RelativeLayout
            android:id="@+id/layout_shop_introduce"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/al_icon_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/al_icon_introduce" />


            <EditText
                android:id="@+id/edit_shop_introduce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/btn_clean_password"
                android:layout_toRightOf="@id/al_icon_introduce"
                android:background="#00000000"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/gray_999999"
                android:textSize="15sp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/gray_dcdcdc" />

        <RelativeLayout
            android:id="@+id/layout_shop_telephone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ai_icon_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ai_icon_telephone" />

            <EditText
                android:id="@+id/edit_shop_telephone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/btn_clean_password"
                android:layout_toRightOf="@id/ai_icon_telephone"
                android:background="#00000000"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/gray_999999"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/gray_dcdcdc" />

        <RelativeLayout
            android:id="@+id/layout_shop_extension"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/password_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/al_icon_extension" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/btn_clean_password"
                android:layout_toRightOf="@id/password_icon"
                android:background="#00000000"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/gray_999999"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/gray_dcdcdc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_back_pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/alite_btn_login_phone"
            android:text="完成"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
