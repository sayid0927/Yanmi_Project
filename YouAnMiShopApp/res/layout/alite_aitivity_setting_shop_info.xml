<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:weightSum="1">


    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/alite_connection_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_dcdcdc" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="完善门店信息"
                    android:textColor="#333333"
                    android:textSize="18dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="完整的门店信息有助于店铺推广"
                    android:textColor="@color/gray_999999"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="同时也方便我们为你的门店提供服务"
                    android:textColor="@color/gray_999999"
                    android:textSize="13dp" />


                <!--<com.zxly.o2o.view.CircleImageView-->
                <!--android:id="@+id/img_user_head"-->
                <!--android:layout_width="75dp"-->
                <!--android:layout_height="75dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:src="@drawable/default_head_big"-->
                <!--app:border_color="@color/white"-->
                <!--app:border_width="1dp" />-->

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_shop_home"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginRight="37dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/al_icon_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/al_icon_home" />


                    <EditText
                        android:id="@+id/edit_shop_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@id/al_icon_home"
                        android:background="#00000000"
                        android:gravity="bottom"
                        android:hint="门店名称"
                        android:singleLine="true"
                        android:textColorHint="@color/gray_999999"
                        android:textSize="15sp" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/gray_dcdcdc" />


                <RelativeLayout
                    android:id="@+id/layout_shop_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginRight="37dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/al_icon_introduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"

                        android:layout_marginRight="10dp"
                        android:src="@drawable/al_icon_introduce" />


                    <TextView
                        android:id="@+id/tv_shop_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_toLeftOf="@id/btn_clean_password"
                        android:layout_toRightOf="@id/al_icon_introduce"
                        android:background="#00000000"
                        android:gravity="bottom"
                        android:hint="门店所在地区"
                        android:singleLine="true"
                        android:textColorHint="@color/gray_999999"
                        android:textSize="15sp" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/gray_dcdcdc" />

                <RelativeLayout
                    android:id="@+id/layout_shop_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginRight="37dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ai_icon_telephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"

                        android:layout_marginRight="10dp"
                        android:src="@drawable/ai_icon_telephone" />

                    <EditText
                        android:id="@+id/edit_shop_telephone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_toLeftOf="@id/btn_clean_password"
                        android:layout_toRightOf="@id/ai_icon_telephone"
                        android:background="#00000000"
                        android:gravity="bottom"
                        android:hint="门店联系人"
                        android:singleLine="true"
                        android:textColorHint="@color/gray_999999"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/gray_dcdcdc" />

                <RelativeLayout
                    android:id="@+id/layout_shop_extension"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginRight="37dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/password_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/al_icon_extension" />

                    <EditText
                        android:id="@+id/edit_generalizeCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_toLeftOf="@id/btn_clean_password"
                        android:layout_toRightOf="@id/password_icon"
                        android:background="#00000000"
                        android:gravity="bottom"
                        android:hint="推广人ID，若没有可不填 "
                        android:singleLine="true"
                        android:textColorHint="@color/gray_999999"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/gray_dcdcdc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btn_back_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/alite_btn_login_default"
                    android:text="完成"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:gravity="bottom|center"
        android:text="@string/shop_setting_top" />

</LinearLayout>
