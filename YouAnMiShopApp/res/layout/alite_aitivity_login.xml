<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/alite_connection_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_pwd_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alite_btn_login_check"
                android:text="密码登录"

                android:textColor="#FF903E"
                android:textSize="18dp" />

            <View
                android:id="@+id/view_pwd_login"
                android:layout_width="80dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#FF903E" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_register_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alite_btn_login_check"
                android:text="验证码登录"
                android:textColor="#999999"
                android:textSize="18dp" />

            <View
                android:id="@+id/view_register_login"
                android:layout_width="85dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#FF903E"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/name_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/edit_name"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/al_login_number" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_clean_phone"
                   android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:src="@drawable/btn_edit_del_selector" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_verification_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
               android:visibility="gone">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/gray_dcdcdc" />

                <TextView
                    android:id="@+id/tv_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="获取验证码"
                    android:textColor="#FEBC8C"
                    android:textSize="15dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/ll_verification_login"
                android:layout_toRightOf="@+id/name_icon"
                android:background="#00000000"
                android:gravity="bottom"
                android:hint="输入手机号"
                android:inputType="number"
                android:singleLine="true"
                android:textColorHint="@color/gray_999999"
                android:textSize="15dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/gray_dcdcdc" />

        <RelativeLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/password_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/al_login_password" />

            <ImageView
                android:id="@+id/btn_clean_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@drawable/btn_edit_del_selector"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@id/btn_clean_password"
                android:layout_toRightOf="@id/password_icon"
                android:background="#00000000"
                android:gravity="bottom"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/gray_999999"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/gray_dcdcdc" />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/alite_btn_login_default"
            android:text="登录"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right|center"
                android:text="忘记密码"
                android:textColor="@color/black" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/gray_dcdcdc" />


            <Button
                android:id="@+id/tv_register_shop"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="left|center"
                android:text="注册商户"
                android:textColor="@color/black" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
