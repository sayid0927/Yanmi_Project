<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_white_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.6dp"
        android:layout_marginLeft="11dp"
        android:paddingBottom="8dp"
        android:paddingRight="9.5dp"
        android:paddingTop="8dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_head_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="9.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/al_manage_productpic" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_head_icon"
            android:includeFontPadding="false"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_toLeftOf="@+id/btn_promotion"
            android:textColor="@color/gray_333333"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/btn_cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_head_icon"
            android:layout_toRightOf="@+id/img_head_icon"
            android:gravity="center"
            android:padding="2dp"
            android:text="¥"
            android:textColor="#9A9C9F"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_browseCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_cityName"
            android:layout_alignBottom="@+id/btn_cityName"
            android:layout_toEndOf="@+id/btn_cityName"
            android:layout_toRightOf="@+id/btn_cityName"
            android:text=""
            android:textColor="@color/gray_999999"
            android:textSize="14dp" />


