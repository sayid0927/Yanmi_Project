<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_white_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingRight="9.5dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.6dp"
        android:layout_marginLeft="11dp"
        android:paddingBottom="8dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_head_icon"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:layout_marginRight="9.5dp"
            android:src="@drawable/icon_default_170x170"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="32.5dp"
            android:layout_toRightOf="@+id/img_head_icon"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/gray_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btn_cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_head_icon"
            android:layout_toRightOf="@+id/img_head_icon"
            android:background="@drawable/btn_promotion_locat"
            android:gravity="center"
            android:text="罗湖区"
            android:padding="2dp"
            android:textColor="@color/orange_da6f5e"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/txt_browseCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_cityName"
            android:layout_alignBottom="@+id/btn_cityName"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/btn_cityName"
            android:layout_toRightOf="@+id/btn_cityName"
            android:text="9999 次推广"
            android:textColor="@color/gray_999999"
            android:textSize="11sp" />



        <Button
            android:id="@+id/btn_promotion"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/img_head_icon"
            android:layout_alignParentRight="true"
            android:background="@drawable/al_icon_share"
            android:gravity="center"
            />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="@color/gray_dcdcdc" />
</LinearLayout>
